@model IEnumerable<Images>
@{
    ViewData["Title"] = "Home Page";
}

<a asp-action="UploadPicture" class="btn btn-info">Upload Picture</a>

<a asp-action="SearchPicture" class="btn btn-info">Search Picture</a>


@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>Image</th>
            <th>Image Name</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Picture != null)
                    {
                        var base64 = Convert.ToBase64String(item.Picture);
                        var img = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@img" width="100px" height="100px" />
                    }
                    else
                    {
                        <img src="" width="100px" height="100px" />
                    }
                </td>

                <td>
                    @Html.DisplayFor(m => item.PicName)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>


        }
    </table>
}
else
{
    <h4>No images</h4>
}
